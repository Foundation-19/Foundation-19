//Flags for exoplanet ruin picking

/// Long term habitat
#define RUIN_HABITAT 	(1<<0)
/// Human-made structure
#define RUIN_HUMAN 		(1<<1)
/// Artificial structure of an unknown origin
#define RUIN_ALIEN 		(1<<2)
/// Crashed vessel
#define RUIN_WRECK 		(1<<3)
/// Naturally occuring structure
#define RUIN_NATURAL	(1<<4)
/// Ruin depending on planet having water accessible
#define RUIN_WATER 		(1<<5)
